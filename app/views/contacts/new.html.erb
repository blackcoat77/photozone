<% content_for :title do %>Contact<% end %>
<h3>Contact</h3>

<br>

<%= form_for @contact, validate: true, html: { class: "form-horizontal" } do |f| %>

<div class="form-group">

    <div class="col-lg">
        <%= f.text_field :name, :placeholder => "* Enter your Name", class: "form-control" %>
    </div>
</div>
<div class="form-group">

    <div class="col-lg">
        <%= f.email_field :email,  :placeholder => "* Enter your Email address", class: "form-control" %>
    </div>
</div>

<div class="form-group">

    <div class="col-lg">
        <%= f.text_area :content, :size => "24x6", :placeholder => "* Enter Message", class: "form-control" %>
    </div>
</div>
<div class="form-group">

    <div class="col-lg">
        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
</div>

<% end %>
</div>
